# Application
APP_NAME="Smart Inventory Management System"
APP_VERSION="1.0.0"
DEBUG=True

# API
API_V1_PREFIX="/api/v1"

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/inventory"

# Redis
REDIS_URL="redis://localhost:6379/0"

# JWT Authentication
JWT_SECRET_KEY="your-secret-key-change-in-production"
JWT_ALGORITHM="HS256"
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# Celery
CELERY_BROKER_URL="redis://localhost:6379/0"
CELERY_RESULT_BACKEND="redis://localhost:6379/0"

# ML Settings
ML_MODEL_PATH="./models"
ML_MIN_TRAINING_DAYS=30

# Alert Settings
ALERT_THRESHOLD_DAYS=7
EMAIL_NOTIFICATIONS_ENABLED=False

# Email Settings (SMTP)
# For Gmail: smtp.gmail.com:587 (requires app password if 2FA enabled)
# For SendGrid: smtp.sendgrid.net:587 (use API key as password)
# For AWS SES: email-smtp.us-east-1.amazonaws.com:587
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USERNAME=""
SMTP_PASSWORD=""
SMTP_FROM_EMAIL=""
SMTP_FROM_NAME="Smart Inventory System"
ALERT_RECIPIENT_EMAILS=[]

# External APIs
BARCODE_API_KEY=""
BARCODE_API_URL="https://api.upcitemdb.com/prod/trial/lookup"
